<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text -->

    <style name="TextViewStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textAppearance">@style/TextMedium</item>
    </style>

    <style name="TextMedium" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="TextBold" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="fontFamily">@font/quicksand_bold</item>
    </style>

    <!-- Snackbars -->

    <style name="Snackbar" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:backgroundTint">@color/textPrimary</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="SnackbarButton" parent="@style/Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/sun</item>
        <item name="android:textAppearance">@style/TextMedium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SnackbarText" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/textPrimaryInverse</item>
        <item name="android:textAppearance">@style/TextMedium</item>
    </style>

    <!-- Dialog -->

    <style name="AlertDialog" parent="@style/Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/sun</item>
    </style>

    <!-- Seekbar -->

    <style name="SeekBar" parent="@style/Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/fiord</item>
        <item name="android:progressTint">@color/big_stone</item>
        <item name="android:colorControlActivated">@color/big_stone</item>
    </style>

    <!-- Switch -->

    <style name="SwitchTextAppearance" parent="TextBold">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/big_stone</item>
    </style>

</resources>